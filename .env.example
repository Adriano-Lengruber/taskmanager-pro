# Environment Configuration for TaskManager Pro
# Copy this file to .env and update the values according to your setup

# Development/Production Mode
NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=sqlite:///./taskmanager.db
# For PostgreSQL: postgresql://user:password@localhost:5432/taskmanager
# For MySQL: mysql://user:password@localhost:3306/taskmanager

# JWT Secret Key (generate a secure key for production)
SECRET_KEY=your-super-secure-secret-key-change-this-in-production

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# External Integrations
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads
